{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "reqps"}},
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "title": "Traffic - Requests Per Second (RPS)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ]
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "title": "Latency (P50 / P90 / P99)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.90, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "P90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "legendFormat": "P99",
          "refId": "C"
        }
      ]
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 7},
      "id": 3,
      "title": "Error Rate (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status!~\"2..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m])) * 100",
          "legendFormat": "Error %",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 7},
      "id": 4,
      "title": "Active Requests (Concurrency)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "http_server_requests_active",
          "legendFormat": "Active",
          "refId": "A"
        }
      ]
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 12, "x": 0, "y": 14},
      "id": 5,
      "title": "JVM Heap Usage (%)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(jvm_memory_used_bytes{area=\"heap\"} / jvm_memory_max_bytes{area=\"heap\"}) * 100",
          "legendFormat": "Heap %",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 12, "x": 12, "y": 14},
      "id": 6,
      "title": "JVM Live Threads",
      "type": "timeseries",
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Threads",
          "refId": "A"
        }
      ]
    },

    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "gridPos": {"h": 7, "w": 24, "x": 0, "y": 21},
      "id": 7,
      "title": "CPU Usage (Docker Container)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container=\"backend\"}[1m])",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percentunit"}}
    }
  ],

  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["golden-signals", "spring", "prometheus", "k6", "observability"],
  "timezone": "",
  "title": "Spring Boot â€” Golden Signals Dashboard",
  "version": 1
}
